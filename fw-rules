
#!/bin/sh
#constantes
WAN_IFACE="WAN"
LAN_IFACE="LAN"
DMZ_IFACE="DMZ"
HTTPS_PORT="443"
HTTP_PORT="80"
DNS_PORT="53"
SSH_PORT="22"
case "$1" in
start)
	echo "Starting fw-rules "
	echo "1" > /proc/sys/net/ipv4/ip_forward
	iptables -t nat -F
	iptables -F OUTPUT
	iptables -F INPUT
	iptables -F FORWARD
        iptables -P INPUT DROP
        iptables -P FORWARD DROP
        iptables -P OUTPUT DROP
	iptables -A FORWARD -o $WAN_IFACE -j ACCEPT
	iptables -t nat -A POSTROUTING -o $WAN_IFACE -j MASQUERADE 
	iptables -A FORWARD -p tcp -s $LAN_IFACE -d $DMZ_IFACE -j ACCEPT
	iptables -A FORWARD -o $WAN_IFACE -p tcp -s $LAN_IFACE -j ACCEPT
	iptables -A FORWARD -s $DMZ_IFACE -d $LAN_IFACE -p icmp -j ACCEPT
	iptables -A FORWARD -p tcp --dport $HTTP_PORT -s $DMZ_IFACE -j ACCEPT
	iptables -A FORWARD -p tcp --dport $HTTPS_PORT -s $DMZ_IFACE -j ACCEPT
	iptables -A FORWARD -p tcp --sport $HTTP_PORT -d $DMZ_IFACE -j ACCEPT
	iptables -A FORWARD -p tcp --sport $HTTPS_PORT -d $DMZ_IFACE -j ACCEPT
	iptables -A OUTPUT -p tcp --dport $HTTP_PORT -s DMZ_IFACE -j ACCEPT
	iptables -A OUTPUT -p tcp --dport $HTTPS_PORT -s $DMZ_IFACE -j ACCEPT
	iptables -A FORWARD -p icmp -s $DMZ_IFACE -j ACCEPT
	iptables -A OUTPUT -p icmp -s $DMZ_IFACE -j ACCEPT
	iptables -A FORWARD -p udp --dport $DNS_PORT -s DMZ -j ACCEPT
	iptables -A FORWARD -p udp --sport $DNS_PORT -d $DMZ_IFACE -j ACCEPT
	iptables -A OUTPUT -p udp --dport $DNS_PORT -s $DMZ_IFACE -j ACCEPT
	iptables -A INPUT -p tcp --dport $SSH_PORT -s $LAN_IFACE -j ACCEPT
	iptables -A INPUT -p tcp --dport $SSH_PORT -s $DMZ_IFACE -j ACCEPT
	iptables -A OUTPUT -p tcp --sport $SSH_PORT -d $DMZ_IFACE -j ACCEPT
	iptalbes -A OUTPUT -p tcp --sport $SSH_PORT -d $LAN_IFACE -j ACCEPT
	iptables -t nat -A POSTROUTING -o $WAN_IFACE -j MASQUERADE
	iptables -t nat -A POSTROUTING -o $DMZ_IFACE -j MASQUERADE
	iptables -t nat -A PREROUTING -i $WAN_IFACE -p tcp --dport $SSH_PORT --j DNAT --to-destination 172.20.108.100:22
	iptables -A FORWARD -p tcp -i $WAN_IFACE -d 172.20.108.100 --dport $SSH_PORT -j ACCEPT
	;;
stop)
        echo "Stopping fw-rules"
        iptables -t nat -F POSTROUTING
        iptables -F INPUT
	iptables -F OUTPUT
	iptables -F FORWARD
        ;;
restart|reload)
        $0 stop
        $0 start
        ;;
        *)
        echo "Usage: $0 {start|stop|restart|reload}"
        exit 1
        ;;
esac
exit 0
